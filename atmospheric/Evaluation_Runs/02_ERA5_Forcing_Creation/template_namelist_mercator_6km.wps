&share
 wrf_core = 'ARW',
 max_dom = 1,
 start_date = 'STARTDATE','STARTDATE',
 end_date   = 'ENDDATE','STARTDATE',
 interval_seconds = 21600,
 io_form_geogrid = 2,
/

&geogrid
 parent_id         =   1,   1,
 parent_grid_ratio =   1,   3,
 i_parent_start    =   1,  31,
 j_parent_start    =   1,  17,
 e_we              =  289, 112,
 e_sn              =  403,  97,
 !
 !!!!!!!!!!!!!!!!!!!!!!!!!!!! IMPORTANT NOTE !!!!!!!!!!!!!!!!!!!!!!!!!!!!
 ! The default datasets used to produce the MAXSNOALB and ALBEDO12M
 ! fields have changed in WPS v4.0. These fields are now interpolated
 ! from MODIS-based datasets.
 !
 ! To match the output given by the default namelist.wps in WPS v3.9.1,
 ! the following setting for geog_data_res may be used:
 !
 ! geog_data_res = 'maxsnowalb_ncep+albedo_ncep+default', 'maxsnowalb_ncep+albedo_ncep+default', 
 !
 !!!!!!!!!!!!!!!!!!!!!!!!!!!! IMPORTANT NOTE !!!!!!!!!!!!!!!!!!!!!!!!!!!!
 !
 geog_data_res = 'default','default',
 dx = 6000,
 dy = 6000,
 map_proj = 'mercator',
 ref_lat   =  40.00,
 ref_lon   =  13.9739,
 truelat1  =  30.0,
 truelat2  =  60.0,
 stand_lon =  -13.60,
 !geog_data_path = '/glade/work/wrfhelp/WPS_GEOG/'
 geog_data_path = '/work/opa/wrf_cmcc-dev/giorgia/wps/GEOGRIDdata',
 !opt_output_from_geogrid_path = '/work/opa/wrf_cmcc-dev/giorgia/wps/geo_EEA_merc_6km/',
/

&ungrib
 out_format = 'WPS',
 !prefix = 'FILE_3d', 'FILE_2d'
 prefix = 'FILE_3d',
/

&metgrid
 !fg_name = 'FILE_3d', 'FILE_2d',
 fg_name = 'FILE_3d',
 io_form_metgrid = 2, 
 opt_output_from_metgrid_path = '/work/cmcc/vr25423/Project/AdriaClimPlus/evaluation_run_30yrs_ERA5/WPS/set_longrun/01-Sep-1989_31-Dec-2020/metgrid',
 opt_metgrid_tbl_path  = '.'
/
